<form role="form">
  <%= form_for @album do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
    </div><!--form-group-->

    <div class="form-group">
        <%= f.label :artist %>
        <%= f.text_field :artist, class: "form-control" %>
    </div><!--form-group-->

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
    </div><!--form-group-->
    
        <%= f.submit "Save" %>

  <% end %>
</form>
